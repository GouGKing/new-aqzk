.container {
  padding: 40rpx;
}

.role-switch {
  display: flex;
  margin-bottom: 60rpx;
  border-bottom: 2rpx solid #eee;
}

.role-item {
  flex: 1;
  text-align: center;
  padding: 30rpx;
  color: #666;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.role-item.active {
  color: #007AFF;
  border-bottom-color: #007AFF;
}

.login-btn {
  margin-top: 80rpx;
  background: #007AFF;
  color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.login-btn:hover {
  background: #0056b3;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(0, 122, 255, 0.3);
}

.login-btn:active {
  transform: translateY(0);
  box-shadow: 0 2px 6px rgba(0, 122, 255, 0.3);
}

/* 定义带边框的输入框样式 */
.bordered-input {
  box-sizing: border-box;
  border: 1px solid #e0e0e0;
  border-radius: 15px;
  padding: 5rpx 50rpx 5rpx 15rpx; /* 增加右侧内边距以容纳图标 */
  margin: 15px 0;
  width: 100%;
  height: 80rpx;
  font-size: 15px;
  line-height: 1.2;
  display: flex;
  align-items: center;
  transition: all 0.2s ease;
}

/* 输入框聚焦时的样式 */
.bordered-input:focus {
  border-color: #1890ff;
  outline: none;
  box-shadow: 0 0 0 2px rgba(24, 144, 255, 0.2);
  transform: translateY(-1px);
}

.password-input-container {
  position: relative;
  width: 100%;
  margin: 15px 0;
}

.password-input {
  box-sizing: border-box;
  border: 1px solid #e0e0e0;
  border-radius: 15px;
  padding: 5rpx 50rpx 5rpx 15rpx; /* 增加右侧内边距以容纳图标 */
  width: 100%;
  height: 80rpx;
  font-size: 15px;
  line-height: 1.2;
  display: flex;
  align-items: center;
  transition: all 0.2s ease;
}

.password-input:focus {
  border-color: #1890ff;
  outline: none;
  box-shadow: 0 0 0 2px rgba(24, 144, 255, 0.2);
  transform: translateY(-1px);
}

.password-visibility-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 20px;
  height: 20px;
  cursor: pointer;
  z-index: 10;
  transition: all 0.2s ease;
}

/* 图标交互效果 */
.password-visibility-icon:hover {
  color: #007AFF;
  transform: translateY(-50%) scale(1.1);
}

.password-visibility-icon:active {
  transform: translateY(-50%) scale(0.95);
}